<div class="admin-title">
  <h2>Posts</h2>
  <a href="/add-post" class="button"><button class="btn">+ Add New</button></a>
</div>
<ul class="admin-posts">
  <% data.forEach(post => { %>
  <li class="list-item">
    <a href="/post/<%= post._id %>" class="post-link">
      <%= post.title %>&nearr;
    </a>
    <div class="admin-post-controls">
      <a href="/edit-post/<%= post._id %>" class="btn editbtn">Edit</a>
      <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete" class="btn dltbtn" />
      </form>
    </div>
  </li>
  <% }) %>
</ul>
